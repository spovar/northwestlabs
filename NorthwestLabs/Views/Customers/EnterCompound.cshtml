@model NorthwestLabs.Models.Work_Order

@{
    ViewBag.Title = "EnterCompound";
}

<h2>Compound Information:</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">

            <div class="col-md-10" style="font-size:24px; font-family:Century Gothic">
                Compound Name:<input type="text" contenteditable="false" class="form-control" name="compName" /><br />
            </div>
            <div class="col-md-10" style="font-size:24px; font-family:Century Gothic">
                Compound Weight:
                <input type="number" value="Enter Weight" class="form-control" name="compWeight" /><br />
            </div>
            <div class="col-md-10" style="font-size:24px; font-family:Century Gothic">
                Compound Quantity:
                <input type="number" value="Enter Quantity" class="form-control" name="compQuant" /><br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="font-size:24px; font-family:Century Gothic">
                <input type="submit" value="Continue" class="btn btn-outline-info btn-lg" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
