@model NorthwestLabs.Models.Work_Order

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter Compound Info</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">

            <div class="col-md-10">
                <input type="hidden" value="@ViewBag.WorkOrderID" name="CustID" />
                <input type="text" contenteditable="false" value="Enter Name" class="" name="compName" />Compound Name:
                <input type="text" value="Enter Weight" class="" name="compWeight" />Compound Weight:
                <input type="text" value="Enter Quantity" class="" name="compQuant" />Compound Quantity:
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
