@model IEnumerable<NorthwestLabs.Models.Material>

@{
    ViewBag.Title = "Index";
}

<h2>Materials:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" >
    <tr class="formtext" style="font-size:18px;"s>
        <th >
            Material Name
        </th>
        <th>
            Cost ($)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="formtext" style="font-size:14px;">
        <td>
            @Html.DisplayFor(modelItem => item.materialsDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.materialsCost)
        </td>
