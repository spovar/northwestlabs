@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" id="homejumbo">
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        <p align="left" class="myhead" style="margin-top:0px;"><span style="font-size:30px; line-height:50%;">Hello @User.Identity.GetUserName(),<br /><br /></span> We are <span style="font-size:210px; line-height:100%">Northwest Labs.</span></p>
    }
    else
    {
        <p align="left" class="myhead" style="margin-top:0px;"> <br /><br />We are <span style="font-size:210px; line-height:100%">Northwest Labs.</span></p>
    }




</div>


